<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        app:cardElevation="8dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/enter_data_title"
                android:layout_marginTop="0dp"
                android:text="@string/main_data"/>


            <LinearLayout
                android:id="@+id/sex_holder"
                style="@style/profile_item">

                <TextView
                    style="@style/profile_item_title"
                    android:text="@string/sex"/>

                <TextView
                    android:id="@+id/sex_edit_text"
                    style="@style/profile_item_value"
                    tools:text="Женщина"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/birthDateHolder"
                style="@style/profile_item">

                <TextView
                    style="@style/profile_item_title"
                    android:text="@string/birth_date"/>

                <TextView
                    android:id="@+id/birthDate"
                    style="@style/profile_item_value"
                    tools:text="22.12.2016"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/marriage_holder"
                style="@style/profile_item">

                <TextView
                    style="@style/profile_item_title"
                    android:text="@string/marriage"/>

                <TextView
                    android:id="@+id/marriage_edit_text"
                    style="@style/profile_item_value"
                    tools:text="Состою в браке"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/religion_holder"
                style="@style/profile_item">

                <TextView
                    style="@style/profile_item_title"
                    android:text="@string/religion"/>

                <TextView
                    android:id="@+id/religion_edit_text"
                    style="@style/profile_item_value"
                    tools:text="Православие"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/education_holder"
                style="@style/profile_item">

                <TextView
                    style="@style/profile_item_title"
                    android:text="@string/education"/>

                <TextView
                    android:id="@+id/education_edit_text"
                    style="@style/profile_item_value"
                    tools:text="Вуз"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/children_holder"
                style="@style/profile_item">

                <TextView
                    style="@style/profile_item_title"
                    android:text="@string/children_question"/>

                <TextView
                    android:id="@+id/children_edit_text"
                    style="@style/profile_item_value"
                    tools:text="Есть"/>
            </LinearLayout>




        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--<include-->
    <!--layout="@layout/dating_need_update"-->
    <!--tools:visibility="gone"/>-->
</LinearLayout>